{
  "name": "ask-ubuntu",
  "version": "1.0.0",
  "description": "Ask Ubuntu - AI-powered desktop assistant for Ubuntu",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "start-with-model": "node electron-wrapper.js",
    "build": "electron-builder --publish never"
  },
  "build": {
    "asar": false,
    "linux": {
      "target": [
	      "dir"
      ],
      "category": "Utility",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "com.github.kenvandine.${name}.desktop"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenvandine/ask-ubuntu.git"
  },
  "author": "Ken VanDine",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kenvandine/ask-ubuntu/issues"
  },
  "homepage": "https://github.com/kenvandine/ask-ubuntu#readme",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-package": "^0.1.0"
  }
}
